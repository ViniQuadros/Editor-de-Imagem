<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fillWidth="true" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.editor.editor.Controller">

    <children>
        <!-- Barra de menu fixa no topo -->
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu text="Arquivo">
                    <items>
                        <MenuItem fx:id="abrirImagemMenu" onAction="#openImage" text="Abrir Imagem" />
                        <MenuItem onAction="#salvarImagem" text="Salvar Imagem" />
                        <Menu text="Abrir Recente" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="sairMenu" onAction="#sair" text="Sair" />
                    </items>
                </Menu>
                <Menu text="Edição">
                    <items>
                        <MenuItem fx:id="desfazerMenu" onAction="#desfazer" text="Desfazer" />
                        <MenuItem fx:id="refazerMenu" onAction="#refazer" text="Refazer" />
                        <MenuItem fx:id="resetarPosicaoMenu" onAction="#resetarPosicao" text="Resetar Posição" />
                    </items>
                </Menu>
                <Menu text="Sobre">
                    <items>
                        <MenuItem fx:id="sobreMenu" onAction="#sobre" text="Sobre o Programa" />
                    </items>
                </Menu>
            <Menu text="Temas">
               <items>
                  <MenuItem text="Light" />
                  <MenuItem text="Dark" />
               </items>
            </Menu>
            <Menu text="Sobre">
               <items>
                  <MenuItem fx:id="sobreMenu11" onAction="#sobre" text="Sobre o Programa" />
               </items>
            </Menu>
            </menus>
        </MenuBar>

        <!-- SplitPane expansível ocupa o restante da altura -->
        <SplitPane fx:id="splitPane" dividerPositions="0.3, 0.65" VBox.vgrow="ALWAYS">
            <items>

                <!-- Painel lateral (preenche e rola com a janela) -->
                <AnchorPane minWidth="0.0">
                    <children>
                        <Accordion AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                            <panes>

                                <!-- Transformações -->
                                <TitledPane text="Transformações">
                                    <content>
                                        <VBox alignment="TOP_CENTER" spacing="8">
                                            <Button fx:id="transladarBtn" text="Transladar" />
                                            <HBox alignment="CENTER" spacing="10">
                                                <Label text="X:" />
                                                <TextField fx:id="valorTransladarX" onAction="#transladar" prefWidth="60" text="0" />
                                                <Label text="Y:" />
                                                <TextField fx:id="valorTransladarY" onAction="#transladar" prefWidth="60" text="0" />
                                            </HBox>

                                            <Button text="Rotacionar" />
                                            <HBox alignment="CENTER" spacing="10">
                                                <Label text="Ângulo:" />
                                                <TextField fx:id="valorAngulo" onAction="#rotacionar" prefWidth="80" text="0" />
                                            </HBox>

                                            <Button fx:id="espelharBtn" text="Espelhar" />
                                            <HBox alignment="CENTER" spacing="10">
                                                <Button fx:id="espelharHBtn" onAction="#espelharHorizontal" text="Horizontal" />
                                                <Button fx:id="espelharVBtn" onAction="#espelharVertical" text="Vertical" />
                                            </HBox>

                                            <Button fx:id="aumentarBtn" onAction="#aumentar" text="Aumentar" />
                                            <Button fx:id="diminuirBtn" onAction="#diminuir" text="Diminuir" />
                                        </VBox>
                                    </content>
                                </TitledPane>

                                <!-- Filtros -->
                                <TitledPane text="Filtros">
                                    <content>
                                        <VBox alignment="TOP_CENTER" spacing="8">
                                            <Button text="Brilho" />
                                            <HBox alignment="CENTER" spacing="8">
                                                <Label text="0%" />
                                                <Slider />
                                                <Label text="100%" />
                                            </HBox>
                                            <Button text="Contraste" />
                                            <Button text="GreyScale" />
                                            <Button text="Passa Alta" />
                                            <Button text="Passa Baixa" />
                                            <Button text="Threshold" />
                                            <Button text="Afinamento" />
                                        </VBox>
                                    </content>
                                </TitledPane>

                                <!-- Morfologia -->
                                <TitledPane text="Morfologia Matemática">
                                    <content>
                                        <VBox alignment="TOP_CENTER" spacing="8">
                                            <Button text="Dilatação" />
                                            <Button text="Erosão" />
                                            <Button text="Abertura" />
                                            <Button text="Fechamento" />
                                        </VBox>
                                    </content>
                                </TitledPane>

                                <!-- Extração -->
                                <TitledPane text="Extração de Características">
                                    <content>
                                        <VBox alignment="TOP_CENTER" spacing="8">
                                            <Button text="Desafio" />
                                        </VBox>
                                    </content>
                                </TitledPane>

                            </panes>
                        </Accordion>
                    </children>
                </AnchorPane>

                <!-- Área central (Input) -->
                <AnchorPane fx:id="inputPane" minWidth="0.0">
                    <children>
                        <!-- Container que expande com o painel e centraliza tudo -->
                        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                            <children>
                                <VBox alignment="CENTER" spacing="16">
                                    <Label alignment="TOP_CENTER" contentDisplay="TOP" text="Input">
                                        <font>
                                            <Font size="20.0" />
                                        </font>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </Label>
                                    <!-- Área da imagem centralizada -->
                                    <StackPane fx:id="inputImageContainer" maxHeight="Infinity" maxWidth="Infinity" minHeight="200">
                                        <children>
                                            <ImageView fx:id="imagemOriginal" pickOnBounds="true" preserveRatio="true">
                                                <StackPane.margin>
                                                    <Insets />
                                                </StackPane.margin></ImageView>
                                        </children>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </StackPane>
                                </VBox>
                            </children>
                        </StackPane>
                    </children>
                </AnchorPane>

                <!-- Área direita (Output) -->
                <AnchorPane fx:id="outputPane" minWidth="0.0">
                    <children>
                        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                            <children>
                                <VBox alignment="CENTER" spacing="16">
                                    <Label text="Output">
                                        <font><Font size="20.0" /></font>
                                    </Label>
                                    <StackPane fx:id="outputImageContainer" disable="true" maxHeight="Infinity" maxWidth="Infinity" minHeight="200">
                                        <children>
                                            <ImageView fx:id="imagemAlterada" pickOnBounds="true" preserveRatio="true" />
                                        </children>
                                    </StackPane>
                                </VBox>
                            </children>
                        </StackPane>
                    </children>
                </AnchorPane>

            </items>
        </SplitPane>
    </children>
</VBox>
