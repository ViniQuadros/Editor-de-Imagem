<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.editor.editor.Controller">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Arquivo">
                    <items>
                        <MenuItem fx:id="abrirImagemMenu" mnemonicParsing="false" onAction="#openImage" text="Abrir Imagem" />
                        <MenuItem mnemonicParsing="false" text="Salvar Imagem" />
                        <Menu mnemonicParsing="false" text="Abrir Recente" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="sairMenu" mnemonicParsing="false" onAction="#sair" text="Sair" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edição">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Desfazer" />
                        <MenuItem mnemonicParsing="false" text="Refazer" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Sobre">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Sobre o Programa" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <SplitPane dividerPositions="0.25" prefHeight="589.0" prefWidth="900.0">
            <items>
                <!-- Painel lateral -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="573.0" prefWidth="256.0">
                    <children>
                        <Accordion prefHeight="573.0" prefWidth="222.0">
                            <panes>
                                <!-- Transformações -->
                                <TitledPane animated="false" text="Transformações">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <VBox spacing="10">
                                                    <children>
                                                        <Button fx:id="transladarBtn" text="Transladar" prefWidth="219.0"/>
                                                        <HBox alignment="CENTER" spacing="10">
                                                            <children>
                                                                <Label text="X:"/>
                                                                <TextField fx:id="valorTransladarX" text="0" onAction="#transladar" prefWidth="35.0"/>
                                                                <Label text="Y:"/>
                                                                <TextField fx:id="valorTransladarY" text="0" onAction="#transladar" prefWidth="35.0"/>
                                                            </children>
                                                        </HBox>

                                                        <Button text="Rotacionar" prefWidth="219.0"/>
                                                        <HBox alignment="CENTER" spacing="10">
                                                            <children>
                                                                <Label text="Ângulo:"/>
                                                                <TextField fx:id="valorAngulo" text="0" onAction="#rotacionar" prefWidth="35.0"/>
                                                            </children>
                                                        </HBox>

                                                        <Button fx:id="espelharBtn" text="Espelhar" onAction="#espelhar" prefWidth="219.0"/>
                                                        <HBox alignment="CENTER" spacing="10">
                                                            <children>
                                                                <Button fx:id="espelharHBtn" text="Horizontal" onAction="#espelharHorizontal"/>
                                                                <Button fx:id="espelharVBtn" text="Vertical" onAction="#espelharVertical"/>
                                                            </children>
                                                        </HBox>

                                                        <Button fx:id="aumentarBtn" text="Aumentar" onAction="#aumentar" prefWidth="219.0"/>
                                                        <Button fx:id="diminuirBtn" text="Diminuir" onAction="#diminuir" prefWidth="219.0"/>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>

                                <!-- Filtros -->
                                <TitledPane text="Filtros">
                                    <content>
                                        <VBox spacing="5">
                                            <children>
                                                <Button text="Brilho" prefWidth="219.0"/>
                                                <HBox alignment="CENTER" spacing="5">
                                                    <children>
                                                        <Label text="0%"/>
                                                        <Slider/>
                                                        <Label text="100%"/>
                                                    </children>
                                                </HBox>
                                                <Button text="Contraste" prefWidth="219.0"/>
                                                <Button text="GreyScale" prefWidth="219.0"/>
                                                <Button text="Passa Alta" prefWidth="219.0"/>
                                                <Button text="Passa Baixa" prefWidth="219.0"/>
                                                <Button text="Threshold" prefWidth="219.0"/>
                                                <Button text="Afinamento" prefWidth="219.0"/>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>

                                <!-- Morfologia -->
                                <TitledPane text="Morfologia Matemática">
                                    <content>
                                        <VBox spacing="5">
                                            <children>
                                                <Button text="Dilatação" prefWidth="219.0"/>
                                                <Button text="Erosão" prefWidth="219.0"/>
                                                <Button text="Abertura" prefWidth="219.0"/>
                                                <Button text="Fechamento" prefWidth="219.0"/>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>

                                <!-- Extração -->
                                <TitledPane text="Extração de Características">
                                    <content>
                                        <VBox>
                                            <children>
                                                <Button text="Desafio" prefWidth="219.0"/>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>

                            </panes>
                        </Accordion>
                    </children>
                </AnchorPane>

                <!-- Área central -->
                <AnchorPane>
                    <children>
                        <Label layoutX="138.0" layoutY="48.0" text="Input">
                            <font><Font size="20.0"/></font>
                        </Label>
                        <Label layoutX="475.0" layoutY="48.0" text="Output">
                            <font><Font size="20.0"/></font>
                        </Label>
                        <ImageView fx:id="imagemOriginal" fitHeight="250.0" fitWidth="300.0" layoutX="22.5" layoutY="150.0" preserveRatio="true"/>
                        <ImageView fx:id="imagemAlterada" fitHeight="250.0" fitWidth="300.0" layoutX="358.0" layoutY="150.0" preserveRatio="true"/>
                        <Line layoutX="344.0" layoutY="95.0" startY="-100.0" endY="2000.0"/>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</VBox>
